@using ProyectoMusica.ViewModels
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
 @model ListadoGruposViewModel


@* @model IEnumerable<ProyectoMusica.Models.Grupo> *@

@{
    ViewData["Title"] = "Mis Grupos de Música Favoritos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

<div class="row">
    <div class="col-12 text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>
<div class="row">
    <div class="col-4 offset-8 ">
    <a asp-action="Create" class="btn btn-outline-secondary">Crear grupo de Música</a>
    </div>
</div>

@if (Model.ListaGrupos.Count()==0)
{
    <div class="row mt-3">
        <div class="col-12">
            <div class="alert alert-danger">No has introducido Grupos de Música en la Base de Datos</div>
        </div>
    </div>
}else
{
    <div class="row mt-3">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered table-stripped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ListaGrupos[0].Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ListaGrupos[0].Vocalista)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ListaGrupos[0].NumIntegrantes)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ListaGrupos[0].AnoFormacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ListaGrupos[0].Genero)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListaGrupos)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vocalista)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumIntegrantes)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AnoFormacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Genero)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                        </svg>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-ticket-detailed-fill" viewBox="0 0 16 16">
                                            <path d="M0 4.5A1.5 1.5 0 0 1 1.5 3h13A1.5 1.5 0 0 1 16 4.5V6a.5.5 0 0 1-.5.5 1.5 1.5 0 0 0 0 3 .5.5 0 0 1 .5.5v1.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 11.5V10a.5.5 0 0 1 .5-.5 1.5 1.5 0 1 0 0-3A.5.5 0 0 1 0 6zm4 1a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7a.5.5 0 0 0-.5.5m0 5a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7a.5.5 0 0 0-.5.5M4 8a1 1 0 0 0 1 1h6a1 1 0 1 0 0-2H5a1 1 0 0 0-1 1" />
                                        </svg>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>


        @Html.PagedListPager(Model.ListaGrupos,page=> Url.Action("Index",new {Pagina=page}),
        new PagedListRenderOptions{
        LiElementClasses=new string[]{"page-item"},
        PageClasses=new string[]{"page-link"}
        }
        )


    </div>



    
   
}


